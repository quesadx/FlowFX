<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="768.0" prefWidth="1024.0" styleClass="filler" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.flowfx.controller.PrincipalController">
   <center>
      <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="filler" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin></VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" fillHeight="false" styleClass="filler" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="hboxHorizontalDockBarReference" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="150.0" prefHeight="8.0" prefWidth="400.0" styleClass="container-sub-dark" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="300.0" right="300.0" />
               </HBox.margin></HBox>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding></HBox>
   </bottom>
   <right>
      <VBox prefWidth="12.0" styleClass="filler" BorderPane.alignment="CENTER" />
   </right>
   <left>
      <VBox prefWidth="12.0" styleClass="filler" BorderPane.alignment="CENTER" />
   </left>
   <top>
      <HBox fx:id="hbLateralHandlebar" alignment="CENTER" minHeight="-Infinity" spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <HBox HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" spacing="4.0">
                     <HBox.margin>
                        <Insets left="4.0" top="4.0" />
                     </HBox.margin>
                     <children>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/icons/lucide--flower-black.png" />
                           </image>
                        </ImageView>
                        <Label text="FlowFX">
                           <tooltip>
                              <Tooltip text="FlowFX es un software desarrollado por estudiantes de la UNA para la administracion de proyectos" />
                           </tooltip></Label>
                     </children>
                     <padding>
                        <Insets left="4.0" />
                     </padding>
                  </HBox>
               </children>
            </HBox>
            <MFXButton fx:id="btnClose" onAction="#onActionBtnClose" styleClass="jfx-close" text="" HBox.hgrow="ALWAYS">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
               <tooltip>
                  <Tooltip text="Cerrar FlowFX" />
               </tooltip>
            </MFXButton>
            <MFXButton fx:id="btnMinimize" onAction="#onActionBtnMinimize" styleClass="jfx-minimize" text="" HBox.hgrow="ALWAYS">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
               <tooltip>
                  <Tooltip text="Minimizar ventana" />
               </tooltip>
            </MFXButton>
            <MFXButton fx:id="btnMaximize" onAction="#onActionBtnMaximize" styleClass="jfx-maximize" text="" HBox.hgrow="ALWAYS">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
               <tooltip>
                  <Tooltip text="Maximizar ventana" />
               </tooltip>
            </MFXButton>
            <HBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="4.0" visible="false">
               <children>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/icons/lucide--flower-black.png" />
                     </image>
                  </ImageView>
                  <Label text="FlowFX">
                     <tooltip>
                        <Tooltip text="FlowFX es un software desarrollado por estudiantes de la UNA para la administracion de proyectos" />
                     </tooltip>
                  </Label>
               </children>
               <padding>
                  <Insets left="4.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
