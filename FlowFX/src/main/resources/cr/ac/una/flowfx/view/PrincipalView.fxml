<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="768.0" prefWidth="1024.0" styleClass="filler" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.flowfx.controller.PrincipalController">
   <center>
      <VBox alignment="CENTER" styleClass="filler" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin></VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" fillHeight="false" styleClass="filler" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="8.0" prefWidth="200.0" styleClass="container-sub-dark" HBox.hgrow="NEVER" />
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding></HBox>
   </bottom>
   <right>
      <VBox prefWidth="12.0" styleClass="filler" BorderPane.alignment="CENTER" />
   </right>
   <top>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="hbLateralHandlebar" alignment="CENTER" spacing="8.0" styleClass="container-sub" HBox.hgrow="NEVER">
               <children>
                  <MFXButton fx:id="btnClose" onAction="#onActionBtnClose" styleClass="jfx-close" text="">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Cerrar FlowFX" />
                     </tooltip>
                  </MFXButton>
                  <MFXButton fx:id="btnMinimize" onAction="#onActionBtnMinimize" styleClass="jfx-minimize" text="">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Minimizar ventana" />
                     </tooltip>
                  </MFXButton>
                  <MFXButton fx:id="btnMaximize" onAction="#onActionBtnMaximize" styleClass="jfx-maximize" text="">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Maximizar ventana" />
                     </tooltip>
                  </MFXButton>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </HBox>
   </top>
   <left>
      <VBox prefWidth="12.0" styleClass="filler" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
